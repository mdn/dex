{
  "name": "@mdn/dex",
  "version": "0.0.1",
  "private": true,
  "repository": "https://github.com/mdn/dex",
  "license": "MPL-2.0",
  "author": "MDN Web Docs",
  "type": "module",
  "scripts": {
    "ai-help-macros": "tsx scripts/ai-help-macros.ts",
    "check:tsc": "find . -name 'tsconfig.json' ! -wholename '**/node_modules/**' ! -wholename '**/cloud-function/src/internal/**' -print0 | xargs -n1 -P 2 -0 sh -c 'cd `dirname $0` && echo \"🔄 $(pwd)\" && npx tsc --noEmit && echo \"☑️  $(pwd)\" || exit 255'",
    "eslint": "eslint .",
    "install:all": "find . -mindepth 2 -name 'package-lock.json' ! -wholename '**/node_modules/**' -print0 | xargs -n1 -0 sh -cx 'npm --prefix $(dirname $0) install'",
    "prepare": "npm run install:all",
    "prettier-check": "prettier --check .",
    "prettier-format": "prettier --write .",
    "test": "npm run prettier-check && npm run test:libs",
    "test:libs": "tsx --test libs/**/*.test.ts",
    "tool:legacy": "tsx ./tool/cli.ts"
  },
  "resolutions": {
    "lodash": ">=4.17.15"
  },
  "dependencies": {
    "@caporal/core": "^2.0.7",
    "@mdn/bcd-utils-api": "^0.0.9",
    "@mdn/browser-compat-data": "^7.1.14",
    "cheerio": "1.1.2",
    "fdir": "^6.5.0",
    "openai": "^6.3.0",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "rehype-parse": "^9.0.1",
    "rehype-remark": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-stringify": "^11.0.0",
    "tsx": "^4.20.6",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^8.57.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.18.10",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^16.4.0",
    "lefthook": "^1.13.6",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "engines": {
    "node": ">=22"
  }
}
